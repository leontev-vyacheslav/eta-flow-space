{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Pump Control System Data",
  "type": "object",
  "properties": {
    "startStop": {
      "type": "boolean",
      "ui": {
        "group": 1,
        "editor": {
          "editorType": "dxSwitch",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Включение/выключение работы"
          }
        }
      }
    },
    "resetFaultPump1": {
      "type": "boolean",
      "ui": {
        "group": 1,
        "editor": {
          "editorType": "dxSwitch",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Сброс ошибки насоса 1"
          }
        }
      }
    },
    "resetFaultPump2": {
      "type": "boolean",
      "ui": {
        "group": 1,
        "editor": {
          "editorType": "dxSwitch",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Сброс ошибки насоса 2"
          }
        }
      }
    },
    "resetOperatingTimePump1": {
      "type": "boolean",
      "ui": {
        "group": 1,
        "editor": {
          "editorType": "dxSwitch",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Сброс времени наработки насоса 1"
          }
        }
      }
    },
    "resetOperatingTimePump2": {
      "type": "boolean",
      "ui": {
        "group": 1,
        "editor": {
          "editorType": "dxSwitch",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Сброс времени наработки насоса 2"
          }
        }
      }
    },
    "lowLevel": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Нижний уровень"
          }
        }
      }
    },
    "midLevel": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Средний уровень"
          }
        }
      }
    },
    "hiLevel": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Верхний уровень"
          }
        }
      }
    },
    "emergencyLevel": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Аварийный уровень"
          }
        }
      }
    },
    "statePump1": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Состояние насоса 1"
          }
        }
      }
    },
    "statePump2": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Состояние насоса 2"
          }
        }
      }
    },
    "faultPump1": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxCheckBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-check-box",
          "label": {
            "location": "left",
            "showColon": true,
            "text": "Ошибка насоса 1"
          }
        }
      }
    },
    "faultPump2": {
      "type": "boolean",
      "ui": {
        "group": 2,
        "editorType": "dxCheckBox",
        "editorOptions": {
          "readOnly": true
        },
        "cssClass": "form-check-box",
        "label": {
          "location": "left",
          "showColon": true,
          "text": "Ошибка насоса 2"
        }
      }
    },
    "timePump1": {
      "type": "integer",
      "minimum": 0,
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxNumberBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-input-box",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Время наработки насоса 1"
          }
        }
      }
    },
    "timePump2": {
      "type": "integer",
      "minimum": 0,
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxNumberBox",
          "editorOptions": {
            "readOnly": true
          },
          "cssClass": "form-input-box",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Время наработки насоса 2"
          }
        }
      }
    },
    "timestamp": {
      "type": "integer",
      "ui": {
        "group": 2,
        "editor": {
          "editorType": "dxDateBox",
          "editorOptions": {
            "type": "datetime",
            "displayFormat": "dd.MM.yyyy HH:mm:ss",
            "readOnly": true
          },
          "cssClass": "form-input-box",
          "label": {
            "location": "top",
            "showColon": true,
            "text": "Время опроса"
          }
        }
      }
    },
    "_msgid": {
      "type": "string",
      "description": "Message identifier"
    }
  },
  "required": [
    "startStop",
    "lowLevel",
    "midLevel",
    "hiLevel",
    "emergencyLevel",
    "statePump1",
    "statePump2",
    "resetFaultPump1",
    "resetFaultPump2",
    "resetOperatingTimePump1",
    "resetOperatingTimePump2",
    "faultPump1",
    "faultPump2",
    "timePump1",
    "timePump2"
  ],
  "additionalProperties": true,
  "ui": {
    "groups": [
      {
        "id": 1,
        "name": "control",
        "caption": "Управление"
      },
      {
        "id": 2,
        "name": "state",
        "caption": "Состояние"
      }
    ]
  }
}